{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": false,
      "target": "ES2022",
      "outDir": "./bin",
      "skipLibCheck": true,
      "declaration": true,
      "strict": true,
      "resolveJsonModule": true,
      "esModuleInterop": true
    },
    "exclude": [
      "./bin",
      "./node_modules"
    ]
  }